{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'URL'|t('livebuzz'),
    instructions: 'Enter the URL to your Livebuzz JSON API.'|t('livebuzz'),
    id: 'xmlUrl',
    name: 'xmlUrl',
    value: settings['xmlUrl']})
}}

{{ forms.textField({
    label: 'Bearer'|t('livebuzz'),
    instructions: 'Enter Bearer Authorisation for Livebuzz.'|t('livebuzz'),
    id: 'authBearer',
    name: 'authBearer',
    value: settings['authBearer']})
}}

{{ forms.lightswitchField({
    label: 'Auto Sync'|t('livebuzz'),
    instructions: 'Automatically sync from the JSON feed.'|t('livebuzz') ~ ' ' ~ 'Sync interval'|t('livebuzz') ~ ': ' ~ (settings['syncDelay'] / 60) ~ ' ' ~ 'minutes'|t('livebuzz'),
    id: 'autoSync',
    name: 'autoSync',
    on: settings['autoSync'],
    value: 1})
}}